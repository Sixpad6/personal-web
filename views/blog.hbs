 <html>
    <head>
        <title>Personal web - BLOG</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/public/style.css">
    </head>

    <body>
        <nav>
            <div class="left-side ">
                <img src="/public/img/logo2.png" alt="">
                
                <ul class ="mt-3">
                    <li >
                        <a href="/home">Home</a>
                    </li>
                    <li>
                        <a href="/blog">Blog</a>
                    </li>
                </ul>
            </div>
            <div class="right-side">
              <div style="display: flex; justify-content:center; align-items:center">
                {{#if isLogin}}
                    <div>
                        <span class>Hallo, {{user.name}}</span>
                    </div>
                    
                    <div>
                        <a href="/logout" class="ms-3">Logout</a>
                    </div>
                    {{else}}
                     <div>
                        <a href="/login" style="text-decoration: none;">Login</a>
                    </div>
                    <div>
                        <a href="/register" class="">Register</a>
                    </div>
              </div>
              {{/if}}
                <a href="/contact">Contact</a>
            </div>
        </nav>
        {{#if messages.loginSucces}}
        <div class="alert alert-success" role="alert">
               {{messages.loginSucces}}
        </div>
        {{/if}}
        {{#if messages.editSucces}}
        <div class="alert alert-success" role="alert">
               {{messages.editSucces}}
        </div>
        {{/if}}
        {{#if messages.delSucces}}
        <div class="alert alert-danger" role="alert">
               {{messages.delSucces}}
        </div>
        {{/if}}
        {{#if messages.AddSucces}}
        <div class="alert alert-success" role="alert">
               {{messages.AddSucces}}
        </div>
        {{/if}}
        {{#if messages.logotSucces}}
        <div class="alert alert-danger" role="alert">
               {{messages.logotSucces}}
        </div>
        {{/if}}
          {{#if isLogin}}
        <div style="text-align:right; margin-top:40px; margin-right: 100px">
            <a href="/add-blog" style=
            "text-decoration: none;
             background-color:rgb(247, 127, 41);
             border-radius: 10px;
             padding:10px 20px;
             color:white;">Add Blog</a>
        </div>
        {{/if}}
 <div id="contents" class="blog-list">
        <!-- dynamic content would be here -->
        {{#each blogs}}
        <div class="blog-list-item ">
          <div class="blog-image">
            <img src="{{images}}" alt="" />
          </div>
          <div class="blog-content">
            <div class="btn-group text-end">
              {{#if isLogin}}
              <a href="/edit-blog/{{this.id}}" class="btn-edit" style="text-decoration: none; color:black;">Edit Blog</a>
              <a href="/delete-blog/{{this.id}}" class="btn-post" style="text-decoration: none; margin-left:10px;">Delete Blog</a>
              {{/if}}
            </div>
            <h1>
              <a href="/detail-blog/{{this.id}}" target="_blank"
                >{{this.title}}</a
              >
            </h1>
            <div class="detail-blog-content">
              {{this.post_at}} | {{this.author}}
            </div>
            <p>
             {{this.content}}
            </p>
            <div style="color: gray; text-align: right; margin-top: 20px; font-size: 15px;">
              {{this.post_age}}
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      </body>
      </html>