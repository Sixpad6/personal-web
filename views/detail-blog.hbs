<html>
  <head>
    <title>Creating Blog Page - detail</title>
    <link rel="stylesheet" href="/public/style.css" />
  </head>
  <body>
    <!-- NavBar -->
    <nav>
            <div class="left-side ">
                <img src="/public/img/logo2.png" alt="">
                
                <ul class ="mt-3">
                    <li >
                        <a href="/home">Home</a>
                    </li>
                    <li>
                        <a href="/blog">Blog</a>
                    </li>
                </ul>
            </div>
            <div class="right-side">
              <div style="display: flex; justify-content:center; align-items:center">
                {{#if isLogin}}
                    <div>
                        <span class>Hallo, {{user.name}}</span>
                    </div>
                    
                    <div>
                        <a href="/logout" class="ms-3">Logout</a>
                    </div>
                    {{else}}
                     <div>
                        <a href="/login" style="text-decoration: none;">Login</a>
                    </div>
                    <div>
                        <a href="/register" class="">Register</a>
                    </div>
              </div>
              {{/if}}
                <a href="/contact">Contact</a>
            </div>
        </nav>

    <!-- Blog -->
    <div class="blog-detail">
      <div class="blog-detail-container">
        <h1>{{blog.title}}</h1>
        <div class="author">{{blog.post_date}} | {{blog.author}}</div>
        <img src="/public/assets/blog-img-detail.png" alt="detail" />
        <p>
        {{blog.content}}
        </p>
      </div>
    </div>
  </body>
</html>
