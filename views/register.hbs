<html>
    <head>
        <title>Register</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="public/style.css">
    </head>
    <body>
       <nav>
            <div class="left-side ">
                <img src="/public/img/logo2.png" alt="">
                
                <ul class ="mt-3">
                    <li >
                        <a href="/home">Home</a>
                    </li>
                    <li>
                        <a href="/blog">Blog</a>
                    </li>
                </ul>
            </div>
            <div class="right-side">
              <div style="display: flex; justify-content:center; align-items:center">
                {{#if isLogin}}
                    <div>
                        <span class>Hallo, {{user.name}}</span>
                    </div>
                    
                    <div>
                        <a href="/logout" class="ms-3">Logout</a>
                    </div>
                    {{else}}
                     <div>
                        <a href="/login" style="text-decoration: none;">Login</a>
                    </div>
                    <div>
                        <a href="/register" class="">Register</a>
                    </div>
              </div>
              {{/if}}
                <a href="/contact">Contact</a>
            </div>
        </nav>
          <div class="container-fluid d-flex align-items-center justify-content-center">
              <div class="container-form" style="box-shadow: 0px 0px 15px rgb(78, 230, 230); padding: 10px; margin-top:20px; border-radius:10px;">
                  <p class="h2 text-center">Register</p>
                  <form action="/register" method="post">
                    <div class="mb-3">
                      <label for="name" class="form-label fw-bold">Name</label>
                      <input name="name" type="text" class="form-control bg-gray" id="name" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                      <label for="email" class="form-label fw-bold">Email</label>
                      <input name="email" type="email" class="form-control bg-gray" id="email" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label fw-bold">Password</label>
                      <input name="password" type="password" class="form-control bg-gray" id="password" aria-describedby="emailHelp">
                    </div>
    
                      <div class="text-start ">
                         <button type="submit" class="btn btn-primary mt-3 bg-orange no-border">Register</button>
                      </div>
                  </form>
              </div>
          </div>

    </body>
</html>